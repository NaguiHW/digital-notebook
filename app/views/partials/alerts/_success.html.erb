<% if flash %>
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %> alert-dismissible fade show mt-3" role="alert">
      <div>
        <% value.each do |v| %>
          <li class="ms-3"><%= v %></li>
        <% end %>
      </div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
<% end %>